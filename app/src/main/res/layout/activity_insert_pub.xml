<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activities.InsertPubActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/vName"
                    style="@style/LoginSignUp1Input"
                    android:hint="@string/vBarName"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/vAddres"
                    style="@style/LoginSignUp1Input"
                    android:hint="@string/vBarvAddres"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/vPhone"
                    style="@style/LoginSignUp1Input"
                    android:hint="@string/vBarvPhone"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/vWasap"
                    style="@style/LoginSignUp1Input"
                    android:hint="@string/vBarvWasap"
                    android:inputType="phone" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_ahalf_horizontal_margin">

                    <ImageView
                        android:id="@+id/openHourImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:contentDescription="Image"
                        android:focusable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_watch_later_black_24dp"
                        android:textSize="12sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/tHourOpen"
                        style="@style/Ecommerce24Input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_weight="1"
                        android:hint="@string/HourBase"
                        android:padding="12dp"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/closeHourImageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_watch_later_black_24dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tHourClose"
                        style="@style/Ecommerce24Input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/HourBase"
                        android:padding="12dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/bDelivery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/vDelerivery" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/d24Horas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/v24Horas" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_ahalf_horizontal_margin">


                    <ImageView
                        android:id="@+id/vMap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_ahalf_horizontal_margin"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:src="@drawable/ic_map_black_24dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dLatitude"
                        style="@style/Ecommerce24Input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/vLatitudeLabel"
                        android:padding="12dp"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/dLongitude"
                        style="@style/Ecommerce24Input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/vLongitudeLabel"
                        android:padding="12dp"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/vPicture"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:src="@drawable/ic_camera_alt_black_24dp" />

                    <ImageView
                        android:id="@+id/FotoImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vPicture"
                        android:padding="40dp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/activity_ahalf_horizontal_margin">

                    <Button
                        android:id="@+id/btnRegisterBar"
                        style="@style/ButtonBlue"
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="30dp"
                        android:text="@string/vRegisterBar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

    <include layout="@layout/layout_loading" />

</RelativeLayout>